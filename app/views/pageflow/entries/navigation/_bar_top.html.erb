<ul class="navigation_bar_top">
  <li class="menu_li">
    <a id="navigation" class="navigation_bullet navigation_main" tabindex="2" title="<%= t('.open_top_navigation') %>" data-active-title="<%= t('.close_top_navigation') %>">
      <span class="hint"><%= t('.open_top_navigation') %></span>
      <span class="button"></span>
    </a>
  </li>
  <%= render('pageflow/entries/navigation/home_button', home_button: entry.home_button) %>
  <li>
    <a class="navigation_bullet navigation_top" <%= "href=##{entry.pages.first.perma_id} data-link=#{entry.pages.first.id}" unless entry.pages.nil? || entry.pages.first.nil? %> tabindex="2" title="<%= t('.navigate_top') %>">
      <span class="hint"><%= t('.navigate_top') %></span>
      <span class="button"></span>
    </a>
  </li>
  <li>
    <a class="navigation_bullet navigation_index" tabindex="2" title="<%= t('.open_overview') %>" data-active-title="<%= t('.close_overview') %>">
      <span class="hint"><%= t('.open_overview') %></span>
      <span class="button"></span>
    </a>
  </li>
  <li class="navigation_menu share" tabindex="2">
    <div class="navigation_menu_box navigation_share_box">
      <%= render 'pageflow/entries/share_menu/facebook_link', entry: entry %>
      <%= render 'pageflow/entries/share_menu/twitter_link', entry: entry %>
      <%= render 'pageflow/entries/share_menu/google_link', entry: entry %>
      <div class="sub_share">
        <a tabindex="2" target="_blank"><%= I18n.t('pageflow.widgets.share_menu.entry') %></a>
        <a tabindex="2" target="_blank"><%= I18n.t('pageflow.widgets.share_menu.current_page') %></a>
      </div>
    </div>
    <a title="<%= t('.share') %>">
      <span class="hint"><%= t('.share') %></span>
      <span class="navigation_bg navigation_share button"></span>
    </a>
  </li>
  <li class="navigation_menu" tabindex="2">
    <div class="navigation_menu_box navigation_credits_box">
      <%= render 'pageflow/entries/navigation/credits_box_content', :entry => entry %>
    </div>
    <a title="<%= t('.imprint') %>">
      <span class="hint"><%= t('.imprint') %></span>
      <span class="navigation_bg navigation_credits button"></span>
    </a>
  </li>
</ul>
<a class="scroll_indicator top" tabindex="2">
  <span class="hint"><%= t('.scroll_up') %></span>
</a>
